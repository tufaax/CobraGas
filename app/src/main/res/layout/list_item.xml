<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textZIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textState"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textState"
            android:layout_toRightOf="@+id/textState"
            android:text="ZIP" />

        <TextView
            android:id="@+id/textGasName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Contact Name"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textGasName"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="Phone Number" />

        <TextView
            android:id="@+id/textCellNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPhoneNumber"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="Cell Name" />

        <Button
            android:id="@+id/buttonDeleteGas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textGasName"
            android:layout_alignBottom="@+id/textPhoneNumber"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/system_transparent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Delete"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textStreetAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCellNumber"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:text="Street Address" />

        <TextView
            android:id="@+id/textState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textStreetAddress"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textStreetAddress"
            android:layout_toRightOf="@+id/textStreetAddress"
            android:text="State" />

    </RelativeLayout>
</RelativeLayout>